{
  "name": "koa-ts",
  "version": "0.1.0",
  "description": "Typescript template for Koa.",
  "main": "dest/index.js",
  "scripts": {
    "dev": "nodemon --watch src/**/* --exec node -r ts-node/register src/index.ts",
    "dev-debug": "nodemon --inspect --watch src/**/* --exec node -r ts-node/register src/index.ts",
    "clean": "rm dest -rf",
    "compile": "npm run clean && tsc",
    "build": "npm run lint && npm run compile",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lintfix": "eslint src --fix --ext .js,.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mengdu/node-hot-dev.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mengdu/node-hot-dev/issues"
  },
  "homepage": "https://github.com/mengdu/node-hot-dev#readme",
  "devDependencies": {
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-favicon": "^2.0.19",
    "@types/koa-router": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-favicon": "^2.1.0",
    "koa-router": "^8.0.8",
    "reflect-metadata": "^0.1.13"
  }
}
