{
  "name": "node-hot-dev",
  "version": "1.0.0",
  "description": "node项目模板",
  "main": "dest/app.js",
  "scripts": {
    "dev": "nodemon --watch src/**/* -e ts,tsx -i src/typings/**/* --exec node -r ./.dev/auto.js -r ts-node/register src/app.ts",
    "dev-debug": "nodemon --inspect --watch src/**/* -e ts,tsx -i src/typings/**/* --exec node -r ./.dev/auto.js -r ts-node/register src/app.ts",
    "clean": "rm dest -rf",
    "compile": "npm run clean && tsc",
    "build": "npm run lint && npm run compile",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lintfix": "eslint src --fix --ext .js,.ts"
  },
  "keywords": [
    "hot",
    "dev",
    "node"
  ],
  "author": "lanyue",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "camelcase": "^5.3.1",
    "chalk": "^2.4.2",
    "dotenv": "^8.0.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-favicon": "^2.0.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0"
  }
}
